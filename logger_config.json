{
    "version": 1,
    "disable_existing_loggers": "False",
    "formatters": {
      "standard": {
        "format": "%(asctime)s [%(levelname)s]: %(message)s"
      }
    },
    "handlers": {
      "default": {
        "level": "DEBUG",
        "formatter": "standard",
        "class": "logging.StreamHandler",
        "stream": "ext://sys.stdout"
      },
      "file_handler": {
        "level": "DEBUG",
        "formatter": "standard",
        "class": "logging.FileHandler",
        "filename": "app.log",
        "mode": "a"
      }
    },
    "loggers": {
      "Root": {
        "handlers": ["default"],
        "level": "DEBUG",
        "propagate": "False"
      },
      "File": {
        "handlers": ["file_handler"],
        "level": "DEBUG",
        "propagate": "False"
      }
    }
  }